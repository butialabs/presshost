# ============================================
# BASIC CONFIGURATION - REQUIRED
# ============================================

# Main domain (without www)
SSL_DOMAIN=yoursite.com

# ============================================
# DATABASE - REQUIRED
# ============================================

# Database name
DB_NAME=presshost

# Database user
DB_USER=presshost

# Database password (use a strong password!)
DB_PASSWORD=your_super_secure_password_here

# Database host (service name in docker-compose)
DB_HOST=mariadb

# Database charset (default: utf8)
DB_CHARSET=utf8

# Database collate (default: utf8mb4_unicode_ci)
DB_COLLATE=utf8mb4_unicode_ci

# ============================================
# PRESS URLS - REQUIRED
# ============================================

# Full site URL (with https://)
WP_SITEURL=https://yoursite.com
WP_HOME=https://yoursite.com

# ============================================
# SECURITY KEYS - REQUIRED
# ============================================
# Generate new keys at: https://api.wordpress.org/secret-key/1.1/salt/

AUTH_KEY='paste-your-key-here'
SECURE_AUTH_KEY='paste-your-key-here'
LOGGED_IN_KEY='paste-your-key-here'
NONCE_KEY='paste-your-key-here'
AUTH_SALT='paste-your-key-here'
SECURE_AUTH_SALT='paste-your-key-here'
LOGGED_IN_SALT='paste-your-key-here'
NONCE_SALT='paste-your-key-here'

# ============================================
# SETTINGS - OPTIONAL
# ============================================

# Environment type (production, staging, development)
WP_ENVIRONMENT_TYPE=production

# language (leave empty for English)
WPLANG=en_US

# ============================================
# DEBUG - DEVELOPMENT
# ============================================

# Enable debug mode (true/false)
WP_DEBUG=false

# Save debug log to /var/log/presshost/debug.log
WP_DEBUG_LOG=false

# Display errors on screen (never use true in production!)
WP_DEBUG_DISPLAY=false

# Save SQL queries for performance analysis
SAVEQUERIES=false

# ============================================
# SECURITY
# ============================================

# Disable automatic updates
AUTOMATIC_UPDATER_DISABLED=true

# Disable WP-Cron (use system cron)
DISABLE_WP_CRON=true

# Disable file editing from admin panel
DISALLOW_FILE_EDIT=true

# Disable plugin/theme installation/updates from admin panel
DISALLOW_FILE_MODS=true

# Force SSL in admin
FORCE_SSL_ADMIN=true

# Force SSL in login
FORCE_SSL_LOGIN=true

# ============================================
# PERFORMANCE
# ============================================

# Filesystem access method (direct recommended)
FS_METHOD=direct

# Auto-save interval in seconds (default: 60)
AUTOSAVE_INTERVAL=120

# Number of post revisions (-1 = unlimited, false = disable)
WP_POST_REVISIONS=-1

# Disable automatic core updates
WP_AUTO_UPDATE_CORE=false

# PHP memory limit
WP_MEMORY_LIMIT=512M

# Maximum PHP memory limit
WP_MAX_MEMORY_LIMIT=512M

# Enable object cache
WP_CACHE=true

# Cache key salt (generate a random string)
WP_CACHE_KEY_SALT=yoursite_com_

# Allow moving media to trash
MEDIA_TRASH=true

# Disable update notices in admin panel
DISABLE_NAG_NOTICES=true

# ============================================
# MARIADB - ROOT PASSWORD
# ============================================

# MariaDB root password (required for database container)
MYSQL_ROOT_PASSWORD=root_super_secure_password_here

# ============================================
# REDIS - CACHE
# ============================================

# Redis password
REDIS_PASSWORD=redis_super_secure_password_here

# Redis host
REDIS_HOST=redis

# Redis port
REDIS_PORT=6379

# ============================================
# SMTP - EMAIL SENDING (OPTIONAL)
# ============================================

# SMTP server host
#SMTP_HOST=smtp.gmail.com

# SMTP server port
#SMTP_PORT=587

# SMTP user
#SMTP_USER=your-email@gmail.com

# SMTP password
#SMTP_PASSWORD=your-smtp-password

# Encryption (tls, ssl, or empty)
#SMTP_SECURE=tls

# Sender name
#SMTP_FROM_NAME=My Site

# Sender email
#SMTP_FROM_EMAIL=noreply@yoursite.com