# Supervisor log rotation configuration
# All supervisor logs are considered error logs: 7 days retention

/var/log/supervisor/*.log {
    daily
    rotate 7
    missingok
    notifempty
    compress
    delaycompress
    create 644 root root
    postrotate
        if [ -f /var/run/supervisord.pid ]; then
            kill -USR2 `cat /var/run/supervisord.pid` 2>/dev/null || true
        fi
    endscript
}